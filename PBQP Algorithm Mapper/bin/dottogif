#!/bin/sh
##############################################################################
# (c) 2003 by B. Scholz
##############################################################################
# Convert DOT file to GIF file 
##############################################################################
# $Id: dottogif,v 1.1.1.1 2003/12/28 20:58:54 scholz Exp $
##############################################################################
# $Log: dottogif,v $
# Revision 1.1.1.1  2003/12/28 20:58:54  scholz
# Imported sources
#
##############################################################################
bname=`basename $1 .dot`
gif="$bname.gif"
neato -Goverlap=false -Tgif $1 -o $gif 2>&1 >/dev/null
rm -rf $1
